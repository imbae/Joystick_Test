                HorizontalAlignment="Right" Margin="0,10,10,0" 
                VerticalAlignment="Top" Width="100" Height="32"
                Command="{Binding GetJoystickData_ButtonClickCommand}"/>
        <Button x:Name="StopJoystick_Button" Content="Stop" 
            HorizontalAlignment="Right" Margin="0,47,10,0" 
            VerticalAlignment="Top" Width="100" Height="32"
            Command="{Binding StopJoystickData_ButtonClickCommand}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,174,0,0" VerticalAlignment="Top"
                     IsChecked="{Binding Button0, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,209,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button1, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,247,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button2, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,287,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button3, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,326,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button4, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,361,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button5, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,397,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button6, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,434,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button7, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,471,0,0" VerticalAlignment="Top"
            IsChecked="{Binding Button8, Converter={StaticResource JoystickButtonSwitch}}"/>
        <RadioButton HorizontalAlignment="Left" Margin="167,507,0,0" VerticalAlignment="Top"
