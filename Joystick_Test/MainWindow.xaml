            Text="{Binding Button7}"/>
        <TextBlock HorizontalAlignment="Left" Margin="103,469,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
            Text="{Binding Button8}"/>
        <TextBlock HorizontalAlignment="Left" Margin="104,505,0,0" 
