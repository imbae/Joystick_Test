        <TextBlock HorizontalAlignment="Left" Margin="37,53,0,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="36,82,0,0" TextWrapping="Wrap" Text="Z" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="31,110,0,0" TextWrapping="Wrap" Text="RotationZ" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="31,139,0,0" TextWrapping="Wrap" Text="PointOfViewControllers0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,172,0,0" TextWrapping="Wrap" Text="Button1" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,207,0,0" TextWrapping="Wrap" Text="Button2" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,245,0,0" TextWrapping="Wrap" Text="Button3" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,285,0,0" TextWrapping="Wrap" Text="Button4" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="36,324,0,0" TextWrapping="Wrap" Text="Button5" VerticalAlignment="Top"/>
