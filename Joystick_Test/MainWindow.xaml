        <TextBlock HorizontalAlignment="Left" Margin="35,505,0,0" TextWrapping="Wrap" Text="Button10" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,540,0,0" TextWrapping="Wrap" Text="Button11" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,579,0,0" TextWrapping="Wrap" Text="Button12" VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="74,26,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Width="50" 
                   Text="{Binding X}"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,53,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
                   Text="{Binding Y}"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,82,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
                   Text="{Binding Z}"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,110,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
                   Text="{Binding RotationZ}"/>
        <TextBlock HorizontalAlignment="Left" Margin="184,139,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
                   Text="{Binding PointOfViewControllers0}"/>
        <TextBlock HorizontalAlignment="Left" Margin="103,172,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
            Text="{Binding Button0}"/>
        <TextBlock HorizontalAlignment="Left" Margin="103,207,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
            Text="{Binding Button1}"/>
        <TextBlock HorizontalAlignment="Left" Margin="103,245,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Width="50"
            Text="{Binding Button2}"/>
        <TextBlock HorizontalAlignment="Left" Margin="103,285,0,0" 
