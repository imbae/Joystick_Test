        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Joystick_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="653.525" Width="335" Closing="Window_Closing">

    <Window.Resources>
        <ResourceDictionary>
            <local:JoystickButtonSwitch x:Key="JoystickButtonSwitch" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
